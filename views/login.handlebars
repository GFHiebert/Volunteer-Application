<div class="container" id="headers">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-10">
      <div class="card mt-4 col-md-8">
        <div class="card-body ">
          <h2 class="card-title font-weight-bolder">Login</h2>
          <form class="login">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="email-input" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="password-input" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}" 
              title="Must contain at least one number and one uppercase and lowercase letter, and between 6 and 20 characters"> 
            </div>
            <button type="submit" class="btn btn-lg text-primary">Login</button>
          </form>
          <br/>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/login.js"></script>

    </body>